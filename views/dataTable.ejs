<%- include('_header') %>
<%const rupiah = Intl.NumberFormat('id-ID') %>

<body>
    <%- include('_navbar') %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-l-10 col-xxl-9">
                <div class="card shadow">
                    <div class="card-header d-flex flex-wrap justify-content-center align-items-center justify-content-sm-between gap-3">
                        <h5 class="display-6 text-nowrap text-capitalize mb-0">Tempat Parkir</h5>
                        <div class="input-group input-group-sm w-auto"><input class="form-control form-control-sm" type="text">
                            <button class="btn btn-outline-primary btn-sm" type="button">search</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>id</th>
                                        <th>name</th>
                                        <th>Address</th>
                                        <th>Normal Price</th>
                                        <th>Higher Price</th>
                                        <th>time</th>
                                        <th>status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% datas.forEach((value)=>{ %>
                                    <tr>
                                        <td><%=value.tempatParkir%></td>
                                        <td><%=value.name%></td>
                                        <td><%=value.alamat%></td>
                                        <td>Rp. <%=rupiah.format(value.priceLow)%></td>
                                        <td>Rp. <%=rupiah.format(value.priceHigh)%></td>
                                        <td><%=value.time%></td>
                                        <td><%=value.status%></td>
                                        <td><a href="/editTempatParkir/<%=value.tempatParkir%>">Edit</a></td>                                            
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>                           
                </div>
            </div>
        </div>
    </div>
</body>

</html>