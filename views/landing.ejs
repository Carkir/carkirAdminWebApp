<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing type</title>
    <link rel="stylesheet" href="general.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
</head>
<body>
    <div class="loginCard">
        <h1>Login</h1>
        <form id="loginForm" action="/auth/login" method="post">
            <div class="formControl">
                <input type="text" class="textInput" name="username" placeholder="username">
            </div>
            <div class="formControl">
                <input type="password" class="textInput" name="password" placeholder="password">
            </div>
            <div class="formControl">
                <input type="submit" placeholder="login" value="sign in" class="submitInput">
            </div>
        </form>
    </div>
</body>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</html>
